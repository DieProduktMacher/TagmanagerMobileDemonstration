<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.produktmacher.mobile.tagmanager.mobiledemo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.produktmacher.mobile.tagmanager.mobiledemo.SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.produktmacher.mobile.tagmanager.mobiledemo.SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name="com.produktmacher.mobile.tagmanager.mobiledemo.activities.DetailsActivity"
            android:label="@string/title_activity_details" >
        </activity>
    </application>

</manifest>
